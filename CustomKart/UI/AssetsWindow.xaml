<Window x:Class="CustomKart.UI.AssetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomKart.UI"
        mc:Ignorable="d"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        Title="AssetsWindow" Height="340" ResizeMode="NoResize" Width="405">
    <Grid>
        <dragablz:TabablzControl>
            <TabItem Header="{DynamicResource assets:basicAssets}">
                <Grid>
                    <Label Content="{DynamicResource assets:gameName}" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="GameNameText" MaxLength="12" HorizontalAlignment="Left" Height="23" Margin="10,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Label Content="{DynamicResource assets:gameCode}" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="GameCodeText" MaxLength="4" HorizontalAlignment="Left" Height="23" Margin="10,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Label Content="{DynamicResource assets:makerCode}" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="MakerCodeText" MaxLength="2" HorizontalAlignment="Left" Height="23" Margin="10,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Image Name="IconImage" HorizontalAlignment="Left" Height="128" Margin="238,50,0,0" VerticalAlignment="Top" Width="128" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    <Button Name="IconReplaceButton" Click="IconReplaceButton_Click" Content="{DynamicResource assets:replaceIcon}" HorizontalAlignment="Left" Margin="245,185,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource assets:titles}">
                <Grid>
                    <Label Content="{DynamicResource assets:langEnglish}" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="TitleEnText" MaxLength="128" HorizontalAlignment="Left" Height="45" Margin="20,40,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="165"/>
                    <Label Content="{DynamicResource assets:langSpanish}" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="TitleEsText" MaxLength="128" HorizontalAlignment="Left" Height="45" Margin="20,120,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="165"/>
                    <Label Content="{DynamicResource assets:langJapanese}" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="TitleJaText" MaxLength="128" HorizontalAlignment="Left" Height="45" Margin="20,200,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="165"/>
                    <Label Content="{DynamicResource assets:langGerman}" HorizontalAlignment="Left" Margin="200,20,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="TitleDeText" MaxLength="128" HorizontalAlignment="Left" Height="45" Margin="210,40,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="165"/>
                    <Label Content="{DynamicResource assets:langFrench}" HorizontalAlignment="Left" Margin="200,100,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="TitleFrText" MaxLength="128" HorizontalAlignment="Left" Height="45" Margin="210,120,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="165"/>
                    <Label Content="{DynamicResource assets:langItalian}" HorizontalAlignment="Left" Margin="200,180,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="TitleItText" MaxLength="128" HorizontalAlignment="Left" Height="45" Margin="210,200,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="165"/>
                </Grid>
                
            </TabItem>
        </dragablz:TabablzControl>
        
    </Grid>
</Window>
